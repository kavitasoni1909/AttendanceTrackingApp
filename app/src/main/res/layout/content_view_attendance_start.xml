<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="info.androidhive.pathshala.activity.ViewAttendanceStart"
    tools:showIn="@layout/activity_view_attendance_start">



    <Button
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:text="From Date"
        android:background="#8053c68c"
        android:id="@+id/fdbutton"
        android:layout_marginLeft="10dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp" />

    <TextView
        android:layout_width="150dip"
        android:layout_height="50dip"
        android:background="#40b86614"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/fdtextView"
        android:layout_marginLeft="5dip"
        android:layout_alignBottom="@+id/fdbutton"
        android:layout_toRightOf="@+id/fdbutton"
        android:layout_toEndOf="@+id/fdbutton" />

    <Button
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:text="To Date"
        android:layout_marginLeft="10dip"
        android:background="#8053c68c"
        android:id="@+id/tdbutton"
        android:layout_below="@+id/fdbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="150dip"
        android:layout_height="50dip"
        android:background="#40b86614"
        android:id="@+id/tdtextView"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:layout_marginLeft="5dip"
        android:layout_alignBottom="@+id/tdbutton"
        android:layout_toRightOf="@+id/tdbutton"
        android:layout_toEndOf="@+id/tdbutton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COURSE NAME"
        android:textColor="#000000"
        android:textSize="20sp"
        android:id="@+id/textView9"
        android:layout_below="@+id/tdbutton"
        android:layout_above="@+id/spinnercrs"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp" />

    <Spinner
        android:layout_width="200dip"
        android:layout_height="50dip"
        android:id="@+id/spinnercrs"
        android:layout_marginTop="5dip"
        android:background="#40b86614"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROCEED"
        android:textColor="#000000"
        android:background="#8053c68c"
        android:id="@+id/buttonproceed"
        android:onClick="proceedbutton"
        android:layout_below="@+id/spinnercrs"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />


</RelativeLayout>
