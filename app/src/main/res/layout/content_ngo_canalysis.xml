<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_ngo_canalysis"
    tools:context="info.androidhive.pathshala.activity.NgoCAnalysis">

    <Button
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:text="From Date"
        android:background="#8053c68c"
        android:id="@+id/fbutton"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="150dip"
        android:layout_height="40dip"
        android:id="@+id/ftV"
        android:background="#40b86614"
        android:textColor="#000000"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/fbutton"
        android:layout_toEndOf="@+id/fbutton" />

    <Button
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:text="To Date"
        android:background="#8053c68c"
        android:layout_marginLeft="10dip"
        android:id="@+id/tbutton"
        android:layout_marginTop="10dip"
        android:layout_below="@+id/fbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="150dip"
        android:layout_height="40dip"
        android:layout_marginLeft="10dip"
        android:id="@+id/ttV"
        android:background="#40b86614"
        android:textColor="#000000"
        android:layout_marginTop="10dip"
        android:layout_alignTop="@+id/tbutton"
        android:layout_toRightOf="@+id/tbutton"
        android:layout_toEndOf="@+id/tbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROCEED"
        android:background="#8053c68c"
        android:onClick="centeranalysis"
        android:id="@+id/centeranalysis"
        android:layout_marginTop="20dip"
        android:layout_below="@+id/spincenter"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CENTER LOCATION"
        android:textColor="#000000"
        android:id="@+id/textClocation"
        android:layout_below="@+id/ttV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp" />

    <Spinner
        android:layout_width="200dip"
        android:layout_height="50dip"
        android:id="@+id/spincenter"
        android:background="#40b86614"
        android:layout_marginTop="5dip"
        android:layout_below="@+id/textClocation"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
