<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="info.androidhive.pathshala.activity.DashBoard"
    tools:showIn="@layout/activity_dash_board">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roll"
        android:textColor="#000000"
        android:textSize="20sp"
        android:id="@+id/rolltv"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="#000000"
        android:textSize="20sp"
        android:id="@+id/nametv"
        android:layout_marginLeft="30dip"
        android:layout_alignTop="@+id/rolltv"
        android:layout_toRightOf="@+id/rolltv"
        android:layout_toEndOf="@+id/rolltv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Percentage"
        android:textColor="#000000"
        android:textSize="20sp"
        android:id="@+id/percentagetv"
        android:layout_marginLeft="60dip"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/nametv"
        android:layout_toEndOf="@+id/nametv" />

    <ListView
        android:id="@+id/defaulters_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dip">

    </ListView>
</RelativeLayout>
