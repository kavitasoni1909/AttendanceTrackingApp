<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="info.androidhive.pathshala.activity.Defaulters"
    tools:showIn="@layout/activity_defaulters">

    <ListView
        android:id="@+id/defaulters_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dip">

    </ListView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roll "
        android:textColor="#000000"
        android:textSize="20sp"
        android:id="@+id/tRoll"
        android:layout_marginLeft="5dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="20sp"
        android:textColor="#000000"
        android:id="@+id/tName"
        android:layout_marginLeft="30dip"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tRoll"
        android:layout_toEndOf="@+id/tRoll" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Percentage"
        android:textColor="#000000"
        android:textSize="20sp"
        android:id="@+id/tPercentage"
        android:layout_marginLeft="30dip"
        android:layout_alignTop="@+id/tName"
        android:layout_toRightOf="@+id/tName"
        android:layout_toEndOf="@+id/tName" />

</RelativeLayout>
